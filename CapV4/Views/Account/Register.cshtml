@using CapV4.Models
@model CapV4.Models.RegisterViewModel

@*Main Author Name: Jasmine Gill
Description of Page:Allows User to Register*@
@{
    ViewBag.Title = "Register";
}

<div class="login-bg">
    <br />
    <br />
    <div class="container register-form">
        <h2>@ViewBag.Title.</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserType, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.RadioButtonFor(m => m.UserType, "R", new { id = "typer" })
                    @Html.Label("Recruiter")
                    <br />
                    @Html.RadioButtonFor(m => m.UserType, "J", new { id = "typej" })
                    @Html.Label("Job Seeker")
                    <br />
                    @Html.RadioButtonFor(m => m.UserType, "C", new { id = "typec" })
                    @Html.Label("Company")


                </div>

            </div>

            <div class="container" id="divr" hidden="hidden">
                <div class="form-group">
                    @Html.Label("Company", new { @class = "col-md-2 control-label" })
                    <div class="col-md-     ">
                        @Html.DropDownList("company", "Select Company")
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Company Code", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBox("compCode", "", new { placeholder = "", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Department", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBox("dept", "", new { placeholder = "", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Job Title", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBox("jobtitle", "", new { placeholder = "", @class = "form-control" })
                    </div>
                </div>
            </div>

    <div class="container" id="divj" hidden="hidden">
        <div class="form-group">
            @Html.Label("Skill Summary", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBox("sksum", "", new { placeholder = "", @class = "form-control" })
            </div>
            </div>

        </div>
            
    <div class="container" id="divc" hidden="hidden">
        <div class="form-group">
            @Html.Label("Description", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBox("desc", "", new { placeholder = "", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Enter Security Pin", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBox("code", "", new { placeholder = "", @class = "form-control" })
            </div>
            </div>
        </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            <script>
                $(document).ready(function () {
                    $('#typer').click(function () {

                        $('#divr').show();
                        $('#divj').hide();
                        $('#divc').hide();
                    });
                    $('#typej').click(function () {
                        $('#divr').hide();
                        $('#divj').show();
                        $('#divc').hide();
                    });
                    $('#typec').click(function () {
                        $('#divr').hide();
                        $('#divj').hide();
                        $('#divc').show();
                    });
                });
            </script>
        }
    </div>
</div>